<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="@string/hello_world"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/startButton"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/messageTextView"
        android:layout_toLeftOf="@+id/messageTextView"
        android:layout_toStartOf="@+id/messageTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stopButton"
        android:layout_alignTop="@+id/startButton"
        android:layout_toRightOf="@+id/messageTextView"
        android:layout_toEndOf="@+id/messageTextView" />

</RelativeLayout><!-- From: file:/C:/Users/George/Desktop/COM262/Student%20Files/Project5_TestTimer/app/src/main/res/layout/activity_main.xml -->